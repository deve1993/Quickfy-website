# UI Testing Server Configuration

# Server
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Browser
BROWSER_TYPE=chromium
HEADLESS=true
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# Visual Regression
VISUAL_THRESHOLD=0.1
VISUAL_BASELINE_DIR=./__visual-baselines__

# Performance
PERF_RENDER_TIME_BUDGET=100
PERF_BUNDLE_SIZE_BUDGET=500

# Accessibility
A11Y_WCAG_LEVEL=AA
A11Y_CHECK_COLOR_CONTRAST=true
A11Y_CHECK_KEYBOARD_NAV=true

# Paths
PROJECT_ROOT=./
COMPONENT_DIR=./src/components
STORYBOOK_URL=http://localhost:6006
