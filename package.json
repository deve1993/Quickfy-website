{
  "name": "quickfy-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "cross-env NEXT_PUBLIC_NODE_ENV=development next dev",
    "build": "npm run validate:translations && cross-env NEXT_PUBLIC_NODE_ENV=production next build",
    "build:analyze": "cross-env ANALYZE=true next build",
    "build:prod": "cross-env NODE_ENV=production NEXT_PUBLIC_NODE_ENV=production NEXT_PUBLIC_APP_ENV=production next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "perf:build": "npm run build:analyze && npm run analyze",
    "perf:audit": "lighthouse http://localhost:3000 --output json --output html --view",
    "analyze": "npx @next/bundle-analyzer",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next",
    "validate:translations": "node scripts/validate-json.js",
    "analyze:translations": "node scripts/analyze-translations.js",
    "analyze:detailed": "node scripts/detailed-translation-analysis.js",
    "validate:i18n": "node scripts/final-i18n-validation.js",
    "test:performance": "node scripts/performance-test.js",
    "prebuild": "npm run validate:translations"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/typography": "^0.5.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.0",
    "dompurify": "^3.0.8",
    "framer-motion": "^10.18.0",
    "lucide-react": "^0.307.0",
    "next": "^15.5.6",
    "next-intl": "^3.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "tailwind-merge": "^2.2.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.5.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "autoprefixer": "^10.4.16",
    "critters": "^0.0.25",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-next": "^15.5.4",
    "happy-dom": "^12.10.3",
    "jsdom": "^23.0.1",
    "postcss": "^8.4.33",
    "schema-dts": "^1.1.2",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0",
    "web-vitals": "^3.5.2"
  }
}
